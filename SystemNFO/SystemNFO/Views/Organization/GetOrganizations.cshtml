@model IEnumerable<SystemNFO.Models.Organization>

@{
    ViewBag.Title = "Список организаций";
}

<h2>Выбор организации, где куратор является основным</h2>

@*<p>
        @Html.ActionLink("Добавить организацию", "Create")
    </p>*@


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ogrn)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Socrnameorg)
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.Ogrn)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Socrnameorg)
            </td>



            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.OrganizationId }) |
                @Html.ActionLink("Выбор", "Details", new { id = item.OrganizationId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.OrganizationId })
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();

                }
                else {
                    $(this).show();
                }
            });

        });
    });
</script>